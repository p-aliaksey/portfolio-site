services:
  app:
    build: .
    image: devops-portfolio:local
    container_name: app
    ports:
      - "8000:8000"
    environment:
      - PORT=8000
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /opt/backups:/opt/backups
      - /opt/devops-portfolio/infra/backup/backup.sh:/opt/devops-portfolio/infra/backup/backup.sh:ro
    extra_hosts:
      - "host.docker.internal:host-gateway"
    labels:
      - "logging=promtail"
  nginx:
    image: nginx:1.27-alpine
    container_name: nginx
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./infra/nginx/nginx-http.conf:/etc/nginx/conf.d/default.conf:ro
      - /etc/letsencrypt:/etc/letsencrypt:ro
      - ./infra/nginx/webroot:/var/www/certbot:ro
    labels:
      - "logging=promtail"
    depends_on:
      - app
      - grafana

  certbot:
    image: certbot/certbot:latest
    container_name: certbot
    volumes:
      - /etc/letsencrypt:/etc/letsencrypt
      - ./infra/nginx/webroot:/var/www/certbot
    command: certonly --webroot --webroot-path=/var/www/certbot --email {{ letsencrypt_email }} --agree-tos --no-eff-email -d {{ domain }} -d www.{{ domain }}
  prometheus:
    image: prom/prometheus:latest
    container_name: prometheus
    volumes:
      - ./infra/monitoring/prometheus/prometheus.yml:/etc/prometheus/prometheus.yml:ro
    command:
      - "--config.file=/etc/prometheus/prometheus.yml"
      - "--web.enable-lifecycle"
      - "--web.enable-admin-api"
      - "--web.listen-address=0.0.0.0:9090"
      - "--storage.tsdb.retention.time=15d"
    ports:
      - "9090:9090"
    labels:
      - "logging=promtail"
  grafana:
    image: grafana/grafana:latest
    container_name: grafana
    ports:
      - "3001:3000"
    environment:
      - GF_SECURITY_ADMIN_PASSWORD={{ grafana_admin_password | default('admin') }}
      - GF_ANALYTICS_REPORTING_ENABLED=false
      - GF_ANALYTICS_CHECK_FOR_UPDATES=false
      - GF_SERVER_ROOT_URL=https://{{ domain }}/grafana/
      - GF_SERVER_SERVE_FROM_SUB_PATH=true
      - GF_SERVER_DOMAIN={{ domain }}
      - GF_SERVER_ENABLE_GZIP=true
      - GF_SERVER_PROTOCOL=http
      - GF_SERVER_ENFORCE_DOMAIN=false
      - GF_SECURITY_STRICT_TRANSPORT_SECURITY=false
      - GF_SECURITY_ALLOW_EMBEDDING=true
    volumes:
      - grafana-data:/var/lib/grafana
      - ./infra/monitoring/grafana/grafana.ini:/etc/grafana/grafana.ini:ro
      - ./infra/monitoring/grafana/datasources.yml:/etc/grafana/provisioning/datasources/datasources.yml:ro
      - ./infra/monitoring/grafana/dashboards.yml:/etc/grafana/provisioning/dashboards.yml:ro
      - ./infra/monitoring/grafana/dashboards:/var/lib/grafana/dashboards:ro
    depends_on:
      - prometheus
      - loki
    labels:
      - "logging=promtail"
  loki:
    image: grafana/loki:2.9.8
    container_name: loki
    ports:
      - "3100:3100"
    command: ["-config.file=/etc/loki/loki-config.yml"]
    volumes:
      - ./infra/logging/loki/loki-config.yml:/etc/loki/loki-config.yml:ro
    labels:
      - "logging=promtail"
  promtail:
    image: grafana/promtail:2.9.8
    container_name: promtail
    user: root
    command: ["-config.file=/etc/promtail/promtail-config.yml"]
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/lib/docker/containers:/var/lib/docker/containers:ro
      - ./infra/logging/promtail/promtail-config.yml:/etc/promtail/promtail-config.yml:ro
    depends_on:
      - loki
    labels:
      - "logging=promtail"
  

volumes:
  grafana-data:

