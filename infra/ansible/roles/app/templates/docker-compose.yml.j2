services:
  app:
    image: "{{ (app_image | default('ghcr.io/' ~ github_repository ~ ':latest')) | string }}"
    container_name: app
    ports:
      - "8000:8000"
    environment:
      - PORT=8000
    labels:
      - "logging=promtail"
  nginx:
    image: nginx:1.27-alpine
    container_name: nginx
    ports:
      - "80:80"
    volumes:
      - ./infra/nginx/nginx-http.conf:/etc/nginx/conf.d/default.conf:ro
    labels:
      - "logging=promtail"
    depends_on:
      - app
  prometheus:
    image: prom/prometheus:latest
    container_name: prometheus
    volumes:
      - ./infra/monitoring/prometheus/prometheus.yml:/etc/prometheus/prometheus.yml:ro
    command:
      - "--config.file=/etc/prometheus/prometheus.yml"
      - "--web.enable-lifecycle"
      - "--web.enable-admin-api"
      - "--web.listen-address=0.0.0.0:9090"
      - "--storage.tsdb.retention.time=15d"
    ports:
      - "9090:9090"
    labels:
      - "logging=promtail"
  grafana:
    image: grafana/grafana:latest
    container_name: grafana
    ports:
      - "3001:3000"
    environment:
      - GF_SECURITY_ADMIN_PASSWORD={{ grafana_admin_password | default('admin') }}
      - GF_SERVER_ROOT_URL=http://pishchik-dev.tech:3001/
      - GF_SERVER_SERVE_FROM_SUB_PATH=false
      - GF_SERVER_DOMAIN=pishchik-dev.tech
      - GF_SERVER_ENFORCE_DOMAIN=false
      - GF_ANALYTICS_REPORTING_ENABLED=false
      - GF_ANALYTICS_CHECK_FOR_UPDATES=false
      - GF_PATHS_PROVISIONING=/etc/grafana/provisioning
    volumes:
      - grafana-data:/var/lib/grafana
      - ./infra/monitoring/grafana/datasources.yml:/etc/grafana/provisioning/datasources/datasources.yml:ro
      - ./infra/monitoring/grafana/dashboards.yml:/etc/grafana/provisioning/dashboards/dashboards.yml:ro
      - ./infra/monitoring/grafana/dashboard.json:/etc/grafana/provisioning/dashboards/dashboard.json:ro
      - ./infra/monitoring/grafana/infrastructure-dashboard.json:/etc/grafana/provisioning/dashboards/infrastructure-dashboard.json:ro
    labels:
      - "logging=promtail"
    depends_on:
      - prometheus
      - loki
  loki:
    image: grafana/loki:2.9.8
    container_name: loki
    ports:
      - "3100:3100"
    command: ["-config.file=/etc/loki/loki-config.yml"]
    volumes:
      - ./infra/logging/loki/loki-config.yml:/etc/loki/loki-config.yml:ro
    labels:
      - "logging=promtail"
  promtail:
    image: grafana/promtail:2.9.8
    container_name: promtail
    command: ["-config.file=/etc/promtail/promtail-config.yml"]
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - ./infra/logging/promtail/promtail-config.yml:/etc/promtail/promtail-config.yml:ro
    depends_on:
      - loki
  

volumes:
  grafana-data:

