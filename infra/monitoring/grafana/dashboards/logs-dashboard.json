{
  "dashboard": {
    "id": null,
    "title": "Application Logs",
    "tags": ["logs", "loki"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Log Stream - All Containers",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"docker\"}",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 0},
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none"
        }
      },
      {
        "id": 2,
        "title": "Log Stream - App Container",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"docker\", container_name=\"app\"}",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none"
        }
      },
      {
        "id": 3,
        "title": "Log Stream - Nginx",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"docker\", container_name=\"nginx\"}",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none"
        }
      },
      {
        "id": 4,
        "title": "Error Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"docker\"} |= \"ERROR\" or |= \"error\" or |= \"Error\"",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none"
        }
      },
      {
        "id": 5,
        "title": "HTTP Access Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"docker\", container_name=\"nginx\"} |= \"GET\" or |= \"POST\" or |= \"PUT\" or |= \"DELETE\"",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none"
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  },
  "overwrite": true
}
